"use client";

export default function TrustBar() {
  return (
    <section className="bg-white rounded-2xl shadow-card py-8 px-6 grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
      {[
        "Livraison rapide",
        "Paiement sécurisé",
        "Produits certifiés",
        "Support 24/7",
      ].map((item, i) => (
        <div key={i} className="text-sm font-medium text-slate-700">
          {item}
        </div>
      ))}
    </section>
  );
}
